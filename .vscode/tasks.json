{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build core",
      "type": "typescript",
      "tsconfig": "core/tsconfig.json",
      "problemMatcher": [
        "$tsc"
      ],
      "options": {
        "cwd": "${workspaceFolder}/core",
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "launch front-end server",
      "command": "python3 -n http.server",
      "dependsOn":[
        "build front-end"
      ]
    },
    {
      "label": "build front-end",
      "type": "typescript",
      "tsconfig": "front-end/tsconfig.json",
      "problemMatcher": [
        "$tsc"
      ],
      "options": {
        "cwd": "${workspaceFolder}/front-end",
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}