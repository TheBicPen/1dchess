{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build core",
      "type": "typescript",
      "tsconfig": "core/tsconfig.json",
      "problemMatcher": [
        "$tsc"
      ],
      "options": {
        "cwd": "${workspaceFolder}/core",
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "launch front-end server",
      "type": "shell",
      "command": "npm run start-server",
      "dependsOn": [
        "build front-end"
      ],
      "isBackground": true,
      "problemMatcher": {
        "owner": "http-server",
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting up http-server.*",
          "endsPattern": ".* to stop the server"
        }
      }
    },
    {
      "label": "build front-end",
      "type": "typescript",
      "tsconfig": "front-end/tsconfig.json",
      "problemMatcher": [
        "$tsc"
      ],
      "options": {
        "cwd": "${workspaceFolder}/front-end",
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}