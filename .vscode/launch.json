{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Launch Front-end",
      "url": "http://localhost/front-end/game.html",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "launch front-end server"
    },
    {
      "name": "Launch Core",
      "program": "${workspaceFolder}/core/game/game.ts",
      "request": "launch",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node",
      "preLaunchTask": "build core"
    }
  ]
}