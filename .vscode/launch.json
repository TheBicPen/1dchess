{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Launch Front-end",
      "url": "http://localhost:8000/front-end/game.html",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "prep front-end",
      "pathMappings": [
        {
          "url": "http://localhost:8000/front-end/dist/core",
          "path": "${workspaceFolder}/core/dist"
        }
      ],
      "log": {
        "consoleLevel": {
          "PathConversion": "Debug",
          "default": "Error"
        }
      }
    },
    {
      "name": "Launch Core CLI",
      "program": "${workspaceFolder}/core/game/runGameCLI.ts",
      "request": "launch",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node",
      // "trace": true,
      // "runtimeArgs": ["--trace-warnings"],
      "preLaunchTask": "build core"
    },
    {
      "name": "Test Core",
      "program": "${workspaceFolder}/core/test/test_all.ts",
      "request": "launch",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node",
      "preLaunchTask": "build core"
    }

  ]
}